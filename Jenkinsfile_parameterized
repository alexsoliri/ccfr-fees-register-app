#!groovy
@Library(value="Infrastructure", changelog=false) _

properties([
    parameters([
        string(name: 'PRODUCT_NAME', defaultValue: 'fees-register', description: ''),
        string(name: 'APP', defaultValue: 'backend', description: ''),
        string(name: 'TYPE', defaultValue: 'java', description: ''),
        string(name: 'SUBSCRIPTION', defaultValue: 'sandbox', description: 'Azure subscriptions available to build in'),
        choice(name: 'ENVIRONMENT', choices: 'saat\nsprod', description: 'Environment where code should be build and deployed')
    ]),
    [$class: 'GithubProjectProperty', projectUrlStr: 'github.com/hmcts/ccfr-fees-register-app'],
    pipelineTriggers([[$class: 'GitHubPushTrigger']])
])

withParameterizedPipeline(params.TYPE, params.PRODUCT_NAME, params.APP, params.ENVIRONMENT, params.SUBSCRIPTION) {

}
